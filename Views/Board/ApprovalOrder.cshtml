@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Bootstrap4.NetCore;
@using Microsoft.AspNetCore.Http
@model X.PagedList.IPagedList<TestWebSIte.Models.ApprovedOrder>

<h2>승인 주문 내역</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th width="10%">승인 번호</th>
                <th width="10%">주문 번호</th>
                <th width="10%">상품 번호</th>
                <th width="10%">주문자</th>
                <th width="60%">상품 제목</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var approvedOrder in Model)
            {
                <tr>
                    <td width="10%">@approvedOrder.ApprovalNo</td>
                    <td width="10%">@approvedOrder.OrderNo</td>
                    <td width="10%">@approvedOrder.BoardNo</td>
                    <td width="10%">@approvedOrder.UserNo</td>
                    <td width="60%"><a asp-controller="Board" asp-action="ApprovalDetail" asp-route-approvalNo="@approvedOrder.ApprovalNo">@approvedOrder.BoardTitle</a></td>
                </tr>
            }
        </tbody>
    </table>
<div class="pagination">
    @Html.PagedListPager(Model, Page => Url.Action("ApprovalOrder", new { Page }), Bootstrap4PagedListRenderOptions.ClassicPlusFirstAndLast)
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">돌아가기</a>
</div>
