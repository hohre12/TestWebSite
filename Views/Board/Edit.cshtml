@model TestWebSIte.Models.Board

@{
    ViewData["Title"] = "게시물 수정";
}
<h2>게시물 수정</h2>

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <form asp-controller="Board" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BoardNo" />
            <input type="hidden" asp-for="Regdate" />
            <input type="hidden" asp-for="Modidate" />
            <input type="hidden" asp-for="UserNo" />
            <input type="hidden" asp-for="ViewCnt" />
            <div class="form-group">
                <label>제목</label>
                <input type="text" asp-for="BoardTitle" class="form-control" placeholder="제목 입력" />
                <span asp-validation-for="BoardTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>내용</label>
                <textarea asp-for="BoardContent" class="form-control editor" rows="20" placeholder="내용 입력"></textarea>
                <span asp-validation-for="BoardContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Edit" class="btn btn-primary">수정완료</button>
                <a class="btn btn-warning" asp-controller="Board" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-2"></div>
</div>