<div class="row">
    <div class="col-xl-12 col-md-12">
        <h2 class="text-center">상품 목록</h2>
        <div class="table table-bordered">
            <table width="100%" style="table-layout:fixed">
                <tr>
                    <th class="table-active" width="10%">글번호</th>
                    <td>@Model.NoticeNo</td>
                    <th class="table-active" width="10%">조회수</th>
                    <td>@Model.ViewCnt</td>
                </tr>

                <tr>
                    <th class="table-active" width="10%">작성자</th>
                    <td>@Model.UserNo</td>
                    <th class="table-active" width="10%">작성일</th>
                    <td>@Model.Regdate</td>
                </tr>

                <tr>
                    <th class="table-active" width="10%">제목</th>
                    <td colspan="3">@Model.NoticeTitle</td>
                </tr>

                <tr>
                    <th class="table-active" width="10%">글 내용</th>
                    <td colspan="3">@Html.Raw(Model.NoticeContent)</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div class="form-group text-center">
    <a class="btn btn-secondary" asp-controller="Board" asp-action="Edit" asp-route-boardNo="@Model.NoticeNo">수정</a>
    <a class="btn btn-secondary" onclick="return confirm('데이터에서 완전히 삭제됩니다. 정말 삭제하시겠습니까?')" asp-controller="Board" asp-action="Delete" asp-route-boardNo="@Model.NoticeNo">삭제</a>
    <a class="btn btn-secondary" asp-controller="Board" asp-action="Index">뒤로가기</a>
</div>
