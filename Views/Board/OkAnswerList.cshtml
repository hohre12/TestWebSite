@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Bootstrap4.NetCore;
@using Microsoft.AspNetCore.Http
@model X.PagedList.IPagedList<TestWebSIte.Models.Answer>

<html>
<head>
    <meta charset="utf-8" />
    <title>Timepicker example</title>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <form asp-controller="Board" asp-action="OkAnswerList" method="post">
        <h2>처리완료 문의 LIST</h2>
        <select id="dropdown" place width="276" name="ChoiceCategory" asp-items="@ViewBag.Categories">
            <option selected="selected" disabled>카테고리</option>
        </select>
        <input id="datepicker" width="276" name="QuestionDay" />
        <input type="text" class="float-right" readonly="readonly" value="문의 숫자 : @ViewBag.Count 개" />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th width="10%">답변 번호</th>
                    <th width="10%">문의 번호</th>
                    <th width="10%">유저 번호</th>
                    <th width="25%">카테 고리</th>
                    <th width="45%">문의 제목</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="10%">@Html.DisplayFor(modelItem => item.AnswerNo)</td>
                    <td width="10%">@Html.DisplayFor(modelItem => item.InquireNo)</td>
                    <td width="10%">@Html.DisplayFor(modelItem => item.UserNo)</td>
                    <td width="25%">@Html.DisplayFor(modelItem => item.CategoryChoice)</td>
                    <td width="45%"><a asp-controller="Board" asp-action="OkAnswerDetail" asp-route-answerNo="@item.AnswerNo">@Html.DisplayFor(modelItem => item.Title)</a></td>
                </tr>
                }
            </tbody>
        </table>
        <div class="pagination">
            @Html.PagedListPager(Model, Page => Url.Action("OkAnswerList", new { Page }), Bootstrap4PagedListRenderOptions.ClassicPlusFirstAndLast)
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">검색</button>
        </div>
    </form>

    <script>
        $('#datepicker').datepicker({ uiLibrary: 'bootstrap4', modal: true, header: true, footer: true });
        $('#dropdown').dropdown({
            uiLibrary: 'bootstrap4'
        });
    </script>
</body>
</html>