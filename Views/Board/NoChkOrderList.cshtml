@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Bootstrap4.NetCore;
@using Microsoft.AspNetCore.Http
@model X.PagedList.IPagedList<TestWebSIte.Models.Order>

<h2>미확정 주문 LIST</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th width="10%">미확정 주문 번호</th>
            <th width="10%">게시물 번호</th>
            <th width="80%">게시물 제목</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td width="10%">@order.OrderNo</td>
                <td width="10%">@order.BoardNo</td>
                <td width="80%">@order.BoardTitle</td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @Html.PagedListPager(Model, Page => Url.Action("NoChkOrderList", new { Page }), Bootstrap4PagedListRenderOptions.ClassicPlusFirstAndLast)
</div>

<div>
    <a asp-controller="Board" asp-action="IndexCus" class="btn btn-secondary">상품 목록</a>
</div>