@model TestWebSIte.Models.Notice

@{
    ViewData["Title"] = "공지사항 등록";
}
<h2>관리자용 공지사항 등록</h2>

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <form asp-controller="Board" asp-action="Notice" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Regdate" />
            <div class="form-group">
                <label>제목</label>
                <input type="text" asp-for="NoticeTitle" class="form-control" placeholder="제목 입력" />
                <span asp-validation-for="NoticeTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>내용</label>
                <textarea asp-for="NoticeContent" class="form-control editor" rows="20" placeholder="내용 입력"></textarea>
                <span asp-validation-for="NoticeContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Notice" class="btn btn-primary">등록</button>
                <a class="btn btn-warning" asp-controller="Board" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-2"></div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}