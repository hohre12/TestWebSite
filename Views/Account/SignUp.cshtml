@model TestWebSIte.Models.User

<script language="javascript" type="text/javascript"></script>
@{
    ViewData["Title"] = "회원가입";
}
<h2>회원가입</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="SignUp" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>사용자 ID</label>
                <input type="text" asp-for="UserId" class="form-control" placeholder="사용자 ID 입력" />
                <!--span asp-validation-for="UserId" class="text-danger"></span-->
                <button asp-controller="Account" asp-action="SignUp" formmethod="get" asp-route-userId="UserId" class="btn btn-secondary navbar-nav ml-auto text-center" >ID 중복체크</button>
            </div>
            <div class="form-group">
                <label>사용자 비밀번호</label>
                <input type="password" asp-for="UserPw" class="form-control" placeholder="사용자 비밀번호 입력" />
                <!--span asp-validation-for="UserPw" class="text-danger"></span-->
            </div>
            <div class="form-group">
                <label>사용자 이름</label>
                <input type="text" asp-for="UserName" class="form-control" placeholder="사용자 이름 입력" />
                <!--span asp-validation-for="UserName" class="text-danger"></span-->
            </div>

            <div class="form-group">
                <label>사용자 E-Mail</label>
                <input type="text" asp-for="UserEmail" class="form-control" placeholder="사용자 소개 입력" />
                <!--span-- asp-validation-for="UserEmail" class="text-danger"></span-->
            </div>

            <div class="form-group">
                <label>사용자 소개</label>
                <input type="text" asp-for="UserIntro" class="form-control" placeholder="사용자 소개 입력" />
                <!--textarea asp-for="UserIntro" class="form-control" placeholder="사용자 소개 입력" rows="20"></textarea-->
                <!--span asp-validation-for="UserIntro" class="text-danger"></span-->
            </div>

            <div class="form-group">
                <label>인증</label>
                <div class="g-recaptcha" data-sitekey="@ViewData["ReCaptchaKey"]"></div>
            </div>

            <div class="form-group">
                <button type="submit" value="SignUp" class="btn btn-primary" asp-route-userId="UserId">회원가입</button>
                <a class="btn btn-warning" href="../Home/Index">취소</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src='https://www.google.com/recaptcha/api.js'></script>
}