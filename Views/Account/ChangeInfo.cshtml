@model TestWebSIte.Models.User

<html>
<head>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#ChangePw').click(function () {
                alert('hello');
                $('#UserPw').attr('readonly', true);
            });
        }
    </script>
</head>
<body>
    <h1>내정보 수정</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Account" asp-action="ChangeInfo" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserNo" />
                <input type="hidden" asp-for="SignUpDay" />
                <input type="hidden" asp-for="SignUpMonth" />
                <input type="hidden" asp-for="SignUpYear" />
                <div class="form-group">
                    <label asp-for="UserId" class="control-label">ID</label>
                    <input type="text" asp-for="UserId" class="form-control" readonly />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserPw" class="control-label">비밀번호</label>
                    <input type="password" name="UserPw" value=@Model.UserPw class="form-control" />
                    <span asp-validation-for="UserPw" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">이름</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserEmail" class="control-label">이메일</label>
                    <input asp-for="UserEmail" class="form-control" />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserIntro" class="control-label">소개</label>
                    <input asp-for="UserIntro" class="form-control" />
                    <span asp-validation-for="UserIntro" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <!--input type="button" id="ChangePw" value="비밀번호 변경" class="btn btn-primary" /-->
                    <input type="submit" value="저으장" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
